<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/control_panel_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal">

<!-- TODO: Need to fix header so that it doesn't overlap Google maps buttons-->
    <View
        android:id="@+id/top_grey_box"
        android:layout_width="wrap_content"
        android:layout_height="55sp"
        android:background="#9f7d7d7d"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text= "@string/Emory"
        android:textColor="#dfFFFFFF"
        android:textAlignment="center"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_grey_box"
        android:layout_centerHorizontal="true"
        xmlns:android="http://schemas.android.com/apk/res/android">

            <ImageButton
                android:id="@+id/control_panel_rewind_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@mipmap/rewind_icon"
                android:contentDescription="@string/rewind_button_description"
                android:alpha="0.8"/>

            <ImageButton
                android:id="@+id/control_panel_play_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@mipmap/play_icon"
                android:contentDescription="@string/play_button_description"
                android:alpha="0.8"/>

            <ImageButton
                android:id="@+id/control_panel_next_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@mipmap/next_icon"
                android:contentDescription="@string/next_button_description"
                android:alpha="0.8"/>

     </LinearLayout>

</RelativeLayout>